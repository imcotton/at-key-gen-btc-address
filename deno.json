{
  "$schema": "https://raw.esm.sh/gh/denoland/deno@v2.5.4/cli/schemas/config-file.v1.json",
  "name": "@key/gen-btc-address",
  "version": "0.2.0-rc.1",
  "description": "CLI to generate BTC wallet address from mnemonic",
  "license": "MIT",
  "imports": {

    "#src/": "./src/",

    "@scure/bip32":           "jsr:@scure/bip32@~2.0.1",
    "@scure/bip39":           "jsr:@scure/bip39@~2.0.1",
    "@scure/btc-signer": "jsr:@scure/btc-signer@~2.0.1",

    "@std/assert":   "jsr:@std/assert@1",
    "@std/expect":   "jsr:@std/expect@1",
    "@std/testing": "jsr:@std/testing@1"

  },
  "tasks": {
    "spec": "deno test ./spec"
  },
  "exports": {
    ".": "./src/mod.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "es2023"
    ]
  },
  "publish": {
    "include": [
      "deno.json",
      "LICENSE.txt",
      "README.md",
      "./spec",
      "./src"
    ],
    "exclude": [
      "./fixtures",
      "./spec/**/__snapshots__/"
    ]
  },
  "lock": false,
  "lint": {
    "include": [ "src/" ],
    "rules": {
      "tags": [ "recommended" ],
      "include": [
        "no-const-assign",
        "no-non-null-assertion",
        "no-non-null-asserted-optional-chain"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 4,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true
  }
}
